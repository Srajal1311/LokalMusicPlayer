{
  "expo": {
    "name": "LokalMusic",
    "slug": "lokal-music",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#091227"
    },
    "android": {
      "package": "com.lokal.music",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#091227"
      },
      "permissions": ["INTERNET", "FOREGROUND_SERVICE", "WAKE_LOCK"]
    },
    "ios": {
      "bundleIdentifier": "com.lokal.music",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      }
    },
    "plugins": [
      [
        "expo-av",
        { "microphonePermission": "Allow LokalMusic to access your microphone." }
      ],
      "expo-font"
    ]
  }
}